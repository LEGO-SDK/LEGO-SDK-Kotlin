<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseActivity" parent="android:Theme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ModalActivity" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="ModalLeftAnimation">
        <item name="android:windowEnterAnimation">@anim/modal_left_in</item>
        <item name="android:windowExitAnimation">@anim/modal_left_out</item>
    </style>

    <style name="ModalRightAnimation">
        <item name="android:windowEnterAnimation">@anim/modal_right_in</item>
        <item name="android:windowExitAnimation">@anim/modal_right_out</item>
    </style>

    <style name="ModalTopAnimation">
        <item name="android:windowEnterAnimation">@anim/modal_top_in</item>
        <item name="android:windowExitAnimation">@anim/modal_top_out</item>
    </style>

    <style name="ModalBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/modal_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/modal_bottom_out</item>
    </style>
    
</resources>
